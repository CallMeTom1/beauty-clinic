{
  "compilerOptions": {
    "esModuleInterop": true,
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2021",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./src",
    "paths": {
      "@common/*": ["./common/*"],
      "@feature/security/*": ["./feature/security/*"],
      "@feature/user/*": ["./feature/user/*"],
      "@feature/care/*": ["./feature/care/*"],
      "@feature/root/*": ["./feature/root/*"],
      //"@feature/holiday/*": ["./feature/holiday/*"],
      //"@feature/business-hours/*": ["./feature/business-hours/*"]

    },
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": false,
    "noImplicitAny": false,
    "strictBindCallApply": false,
    "forceConsistentCasingInFileNames": false,
    "noFallthroughCasesInSwitch": false
  }
}